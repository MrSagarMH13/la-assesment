# Database (PostgreSQL for production, SQLite for local dev)
DATABASE_URL="postgresql://user:password@localhost:5432/timetable_extraction?schema=public"
# For local development with SQLite, use: DATABASE_URL="file:./dev.db"

# Anthropic API Key for Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Cloud Document AI
GOOGLE_PROJECT_ID=your_gcp_project_id
GOOGLE_LOCATION=us  # or eu
GOOGLE_PROCESSOR_ID=your_processor_id
GOOGLE_APPLICATION_CREDENTIALS=./path/to/service-account-key.json

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=timetable-uploads
AWS_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/your-account/timetable-extraction-queue
AWS_SQS_DLQ_URL=https://sqs.us-east-1.amazonaws.com/your-account/timetable-extraction-dlq

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

# Server configuration
PORT=3000
NODE_ENV=development

# Worker Configuration
WORKER_CONCURRENCY=5
MAX_RETRIES=3
RETRY_DELAY=5000  # milliseconds

# Feature Flags
USE_DOCUMENT_AI=true
USE_CLAUDE_FALLBACK=true
USE_HYBRID_MODE=true
